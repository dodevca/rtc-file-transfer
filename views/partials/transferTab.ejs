<div class="bg-white p-3 rounded shadow">
    <nav>
        <div class="nav nav-tabs" id="nav-tab" role="tablist">
            <button type="button" class="nav-link fw-bold<%- tab == 'send' ? ' active' : '' %>" id="nav-send-tab" data-bs-toggle="tab" data-bs-target="#nav-send" role="tab" aria-controls="nav-send" aria-selected="<%- tab == 'send' ? 'true' : 'false' %>">Send</button>
            <button type="button" class="nav-link fw-bold<%- tab == 'receive' ? ' active' : '' %>" id="nav-receive-tab" data-bs-toggle="tab" data-bs-target="#nav-receive" role="tab" aria-controls="nav-receive" aria-selected="<%- tab == 'receive' ? 'true' : 'false' %>">Receive</button>
        </div>
    </nav>
    <div class="tab-content border border-top-0 rounded-bottom" id="nav-transfer">
        <div class="tab-pane p-3 fade<%- tab == 'send' ? ' show active' : '' %>" id="nav-send" role="tabpanel" aria-labelledby="nav-send-tab" tabindex="0">
            <div class="text-center py-4" id="drop-area">
                <input type="file" id="file-input" name="files" class="d-none" multiple>
                <p class="text-light fs-2"><i class="bi bi-file-earmark-arrow-up"></i></p>
                <p>Drag and drop or</p>
                <button type="button" class="btn btn-primary mb-3" id="upload-button">Upload file</button>
                <p class="text-light small">Maximum size 1GB</p>
            </div>
            <div class="text-start d-none" id="file-list">
                <div class="d-flex align-items-center justify-content-between gap-3 mb-3">
                    <p class="text-light small mb-0" id="file-count"></p>
                    <div class="d-flex align-items-center justify-content-end gap-2">
                        <button type="button" class="btn btn-outline-primary py-2" id="reset-button"><i class="bi bi-arrow-repeat me-2"></i>Reset</button>
                        <button type="button" class="btn btn-primary py-2" id="add-button"><i class="bi bi-plus-lg me-2"></i>Add</button>
                    </div>
                </div>
                <ul class="list-unstyled pb-3 mb-3">
                </ul>
                <div class="btn-group w-100" role="group" aria-label="transfer-method">
                    <input type="radio" class="btn-check" name="transfer-method" id="transfer-direct" autocomplete="off" checked>
                    <label class="btn btn-outline-secondary py-2 w-50" for="transfer-direct"><i class="bi bi-qr-code-scan me-2"></i>Direct</label>
                    <input type="radio" class="btn-check" name="transfer-method" id="transfer-link" autocomplete="off">
                    <label class="btn btn-outline-secondary py-2 w-50" for="transfer-link"><i class="bi bi-link-45deg me-2"></i>Link</label>
                </div>
                <div class="mt-3">
                    <button type="button" class="btn btn-primary w-100" id="send-button" disabled>Send</button>
                </div>
            </div>
            <div class="d-none" id="transfer-wrapper">
                <div class="text-center" id="transfer-generate">
                    <p class="mb-0"><span class="badge bg-secondary-subtle text-body" id="transfer-timer">05:00</span></p>
                    <img src="/images/qr-placeholder.png" class="w-100 h-auto" id="qr-code">
                    <div class="input-group border rounded mb-3">
                        <input type="text" class="form-control border-0" id="unique-code-display" aria-label="Unique code for direct transfer" aria-describedby="button-addon1" readonly>
                        <button type="button" class="btn btn-link" id="copy-button"><i class="bi bi-clipboard text-secondary"></i></button>
                    </div>
                </div>
                <div class="d-none" id="transfer-progress">
                    <p class="text-light text-truncate" id="sender-info"></p>
                    <div class="progress mb-3" id="sender-progress" role="progressbar" aria-label="transfer-progress" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">
                        <div class="progress-bar fw-bold" style="width: 0%"></div>
                    </div>
                </div>
                <button type="button" class="btn btn-outline-primary w-100" id="cancel-button">Cancel</button>
                <p class="text-center text-light small mt-3 mb-0">
                    Ojo diclose cook!
                </p>
            </div>
        </div>
        <div class="tab-pane p-3 fade<%- tab == 'receive' ? ' show active' : '' %>" id="nav-receive" role="tabpanel" aria-labelledby="nav-receive-tab" tabindex="0">
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="unique-code-input" value="<%- code %>" placeholder="Enter unique code">
                <label for="unique-code" class="form-label">Unique Code</label>
            </div>
            <button type="button" class="btn btn-primary w-100 mb-3" id="download-button" <%- code ? '' : 'disabled' %>>Download</button>
            <p class="text-light text-truncate mb-0" id="receiver-info"></p>
            <div class="progress mt-3 d-none" id="receiver-progress" role="progressbar" aria-label="transfer-progress" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">
                <div class="progress-bar fw-bold" style="width: 0%"></div>
            </div>
            <p class="text-center text-light small mt-3 mb-0">
                Ojo diclose cook!
            </p>
        </div>
    </div>
</div>